<div class="row">
    <div class="col-lg-10 offset-lg-1 add-edit-category">
        <span class="category-sccusess">{{this.dbMessage}}</span>
        <h2>{{categoryTitle}} Category</h2>
        <form method="post">
            <div class="form-group">
                <label>Title</label>
                <input type="text" value="{{data.title}}" name="title" placeholder="Title" class="form-control">
            </div>
            <div class="form-group">
                <label>Short Description</label>
                <textarea type="text" rows="6" name="shortDescription" placeholder="Short Description" class="form-control">
                    {{data.shortDescription}}
                </textarea>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea type="text" rows="4" name="description" placeholder="Description" class="form-control">
                    {{data.description}}
                </textarea>
            </div>
            <button class="btn btn-default">Submit</button>
        </form>
    </div>
</div>